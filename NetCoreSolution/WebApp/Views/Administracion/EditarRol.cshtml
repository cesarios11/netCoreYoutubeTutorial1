@model EditarRolViewModel
@{
    ViewBag.Title = "Editar rol";
}

<h1>Editar rol</h1>

<form asp-controller="Administracion" asp-action="EditarRol" method="post" class="mt-3" enctype="multipart/form-data">
    <input hidden asp-for="Id" />
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control"/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RolNombre" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RolNombre" class="form-control" />
            <span asp-validation-for="RolNombre" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Editar</button>
            <a asp-controller="Administracion" asp-action="ListaRoles" style="width:auto">Cancelar</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Usuarios en este rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Usuarios.Any())
            {
                foreach(var user in Model.Usuarios)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Niniguno por ahora</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary" style="width:auto">Nuevo Usuario</a>
            <a href="#" class="btn btn-primary" style="width:auto">Borrar Usuario</a>
        </div>
    </div>

</form>