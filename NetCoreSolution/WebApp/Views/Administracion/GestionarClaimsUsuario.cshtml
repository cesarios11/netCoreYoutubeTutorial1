@model UsuarioClaimsViewModel

<form asp-controller="Administracion" asp-action="GestionarClaimsUsuario" method="post" enctype="multipart/form-data">
    <input hidden asp-for="idUsuario" />
    <div class="card">
        <div class="card-header">
            <h2>Gestionar claims usuario</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].tipoClaim" />
                    <input asp-for="@Model.Claims[i].estaSeleccionado" class="form-check-input" />
                    <label asp-for="@Model.Claims[i].estaSeleccionado" class="form-check-label">
                        @Model.Claims[i].tipoClaim
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Actualizar" class="btn btn-primary" style="width:auto;" />
            <a asp-controller="Administracion" asp-action="EditarUsuario" asp-route-id="@Model.idUsuario">
                Cancelar
            </a>
        </div>
    </div>
</form>